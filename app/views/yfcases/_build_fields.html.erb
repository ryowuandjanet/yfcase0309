<div class="nested-fields">
    <div class="field" style="border:1px solid #000;">
        <table>
            <tr>
                <th style="width:20%"><%= f.label :buildnumber,"建號", :style => "width: 100%" %></th>
                <th style="width:12%"><%= f.label :buildarea,"建坪(平方公尺)", :style => "width: 100%" %></th>
                <th style="width:7%"><%= f.label :buildholdingpointperson,"持分(個人)", :style => "width: 100%" %></th>
                <th style="width:7%"><%= f.label :buildholdingpointall,"持分(所有)", :style => "width: 100%" %></th>
                <th style="width:17%"><%= f.label :buildtype,"建物型/使用", :style => "width: 100%" %></th>
                <th style="width:10%"><%= f.label :usearea,"使用分區", :style => "width: 100%" %></th> 
                <th style="width:19%"><%= f.label :buildurl,"地號謄本", :style => "width: 100%" %></th>
                <th style="width:8%">項目</th>
            </tr>
            <tr>
            	<td><%= f.text_field :buildnumber, :style => "width: 100%" %></td>
            	<td><%= f.number_field :buildarea, :step => 0.01, :style => "width: 100%" %></td>
            	<td><%= f.number_field :buildholdingpointperson, :style => "width: 100%" %></td>
            	<td><%= f.number_field :buildholdingpointall, :style => "width: 100%" %></td>
                <td><%= f.select(:buildtype,Yfcase::CLASS_LIST) %></td> 
                <td><%= f.select(:usearea,Yfcase::AREA_LIST) %></td>           	
            	<td><%= f.url_field :buildurl, :style => "width: 100%" %></td>
            	<td><%= link_to_remove_association "刪除地號", f, class: "btn btn-danger btn-sm" %></td>
            </tr>
        </table>
    	 
    </div>
</div>
