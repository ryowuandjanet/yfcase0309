<p id="notice"><%= notice %></p>

<h1>YF評量表清單</h1>

<table class="table table-hover">
  <thead>
    <tr class="table-primary">
      <th>案號</th>
      <th>住址</th>
      <th>地號</th>
      <th>地坪</th>
      <th>建號</th>
      <th>建立者</th>
      <th colspan="3" style="width:15%">項目</th>
    </tr>
  </thead>

  <tbody>
    <% @yfcases.each do |yfcase| %>
      <tr>
        <!-- 案號 -->
        <td><%= yfcase.casenumber %></td>
        <!-- 住址 -->
        <td>
          <%= yfcase.township.try(:zip_code) %> <%= yfcase.county.try(:name) %><%= yfcase.township.try(:name) %><%= yfcase.address %>
        </td>
        <!-- 地號 -->
        <td>
          <% yfcase.lands.each do |land| %>
            <%= land.landnumber %><br>
          <% end %>
        </td>
        <!-- 地坪 -->
        <td>
          <% yfcase.lands.each do |land| %>
            <%= land.landarea %><br>
          <% end %>
        </td>
        <!-- 建號 -->
        <td>
          <% yfcase.builds.each do |build| %>
            <%= build.buildnumber %><br>
            
          <% end %>
        </td>
        <td>
          <%= yfcase.user.try(:first_name) %><%= yfcase.user.try(:last_name) %>

        </td>

        <td>
          <%= link_to yfcase, class: "btn btn-primary btn-sm" do %>
            <%= fa_icon "list lg" %>
          <% end %>
        <% if yfcase.editable_by?(current_user) %>
          <%= link_to edit_yfcase_path(yfcase), class: "btn btn-success btn-sm" do %>
            <%= fa_icon "edit lg" %>
          <% end %>
          <%= link_to yfcase, method: :delete, data: { confirm: '你確定嗎?' }, class: "btn btn-danger btn-sm" do %>
            <%= fa_icon "trash lg" %>
          <% end %>          
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>




