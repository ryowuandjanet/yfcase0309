<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email,"信箱" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :first_name,"姓" %><br />
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :last_name,"名" %><br />
    <%= f.text_field :last_name %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>目前正在等待確認: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password,"修改密碼(使用新密碼)" %> <i>(如果您不想更改，請留空)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> 最少字元</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation,"新密碼再次確認" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

<br>
<br>

  <div class="field">
    <%= f.label :current_password,"輸入原始密碼(更新使用者資訊時使用)" %> <i>(我們需要您當前的密碼來確認您的更改)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "更新使用者資訊" %>
  </div>
<% end %>

<h3>取消我的賬戶</h3>

<p>不開心? <%= button_to "取消我的賬戶", registration_path(resource_name), data: { confirm: "你確定嗎?" }, method: :delete %></p>

<%= link_to "返回", :back %>
